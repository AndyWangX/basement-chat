{
  "name": "basement-chat/basement",
  "description": "Real time chat widget package with flexible broadcast driver support. Built for Laravel using Alpine.js, TypeScript, and Tailwind CSS.",
  "keywords": [
    "laravel",
    "php",
    "websocket",
    "chat",
    "realtime",
    "basement"
  ],
  "homepage": "https://github.com/yusuftaufiq/basement",
  "license": "MIT",
  "authors": [
    {
      "name": "Yusuf T.",
      "email": "dev.yusuftaufiq@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "laravel/framework": "^9.0",
    "laravel/sanctum": "^3.0",
    "spatie/enum": "^3.13",
    "spatie/laravel-data": "^1.5",
    "spatie/laravel-package-tools": "^1.9.2"
  },
  "require-dev": {
    "beyondcode/laravel-dump-server": "^1.8",
    "laravel/pint": "^1.0",
    "nunomaduro/collision": "^6.2",
    "nunomaduro/larastan": "^2.0.1",
    "nunomaduro/phpinsights": "^2.5",
    "orchestra/canvas": "^7.2",
    "orchestra/testbench": "^7.0",
    "orchestra/testbench-dusk": "^7.7",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpunit/phpunit": "^9.5",
    "pusher/pusher-php-server": "^7.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "BasementChat\\Basement\\": "src",
      "BasementChat\\Basement\\Database\\Factories\\": "database/factories"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BasementChat\\Basement\\Tests\\": "tests"
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse --memory-limit=256M",
    "canvas": "vendor/bin/canvas",
    "dumper:start": [
      "Composer\\Config::disableProcessTimeout",
      "./vendor/bin/var-dump-server --format=html > dump.html"
    ],
    "dumper:serve": [
      "Composer\\Config::disableProcessTimeout",
      "@php -S localhost:8000 dump.html"
    ],
    "format": "vendor/bin/pint",
    "insights": "vendor/bin/phpinsights analyse config database routes src",
    "test": "vendor/bin/testbench package:test"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "BasementChat\\Basement\\BasementServiceProvider"
      ],
      "aliases": {
        "Basement": "BasementChat\\Basement\\Facades\\Basement"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
