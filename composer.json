{
  "name": "haemanthus/basement",
  "description": "Easily add a real-time chat widget to your existing Laravel App!",
  "keywords": [
    "laravel",
    "php",
    "websocket",
    "chat",
    "basement"
  ],
  "homepage": "https://github.com/yusuftaufiq/basement",
  "license": "MIT",
  "authors": [
    {
      "name": "Yusuf T.",
      "email": "dev.yusuftaufiq@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "illuminate/contracts": "^9.0",
    "laravel/sanctum": "^3.0",
    "spatie/enum": "^3.13",
    "spatie/laravel-data": "^1.5",
    "spatie/laravel-package-tools": "^1.9.2"
  },
  "require-dev": {
    "beyondcode/laravel-dump-server": "^1.8",
    "laravel/pint": "^1.0",
    "nunomaduro/collision": "^6.0",
    "nunomaduro/larastan": "^2.0.1",
    "nunomaduro/phpinsights": "^2.5",
    "orchestra/canvas": "^7.2",
    "orchestra/testbench": "^7.0",
    "pestphp/pest": "^1.21",
    "pestphp/pest-plugin-laravel": "^1.1",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "Haemanthus\\Basement\\": "src",
      "Haemanthus\\Basement\\Database\\Factories\\": "database/factories"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Haemanthus\\Basement\\Tests\\": "tests"
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse --memory-limit=1G",
    "insights": "vendor/bin/phpinsights analyse config database routes src",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint",
    "canvas": "vendor/bin/canvas",
    "dumper:start": [
      "Composer\\Config::disableProcessTimeout",
      "./vendor/bin/var-dump-server --format=html > dump.html"
    ],
    "dumper:serve": [
      "Composer\\Config::disableProcessTimeout",
      "@php -S localhost:8000 dump.html"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Haemanthus\\Basement\\BasementServiceProvider"
      ],
      "aliases": {
        "Basement": "Haemanthus\\Basement\\Facades\\Basement"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
